    <meta name="description" content="<?php echo $block->getMeta('description'); ?>" />
    <meta name="keywords" content="<?php echo $block->getMeta('keywords'); ?>" lang="<?php echo $block->getLang(); ?>" />

    <?php
    foreach ($block->getAdditionalMetaTags() as $tag)
